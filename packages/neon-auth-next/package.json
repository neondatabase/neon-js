{
  "name": "@neondatabase/neon-auth-next",
  "version": "0.1.0-alpha.8",
  "description": "Neon Auth Client for Next.js",
  "type": "module",
  "license": "Apache-2.0",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "test:node": "node --run test",
    "test:ci": "vitest run",
    "typecheck": "tsc --noEmit",
    "test:types": "tsc --noEmit",
    "lint": "eslint .",
    "release": "bun run build && bumpp --tag 'neon-auth-next-v%s' && bun publish --tag latest"
  },
  "devDependencies": {
    "tsdown": "0.16.0",
    "typescript": "^5.9.3",
    "vitest": "4.0.7",
    "vite-tsconfig-paths": "5.1.4",
    "msw": "2.6.8"
  },
  "peerDependencies": {
    "next": ">=15.0.0"
  },
  "dependencies": {
    "@neondatabase/neon-auth": "workspace:*",
    "@supabase/auth-js": "2.79.0",
    "better-auth": "1.4.2",
    "zod": "4.1.12",
    "jose": "6.1.2"
  }
}
