{
  "name": "@neondatabase/auth",
  "version": "0.1.0-alpha.8",
  "description": "Authentication adapters for Neon services",
  "type": "module",
  "license": "Apache-2.0",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./react": {
      "types": "./dist/react/index.d.mts",
      "default": "./dist/react/index.mjs"
    },
    "./react/ui": {
      "types": "./dist/react/ui/index.d.mts",
      "default": "./dist/react/ui/index.mjs"
    },
    "./react/adapters": {
      "types": "./dist/react/adapters/index.d.mts",
      "default": "./dist/react/adapters/index.mjs"
    },
    "./vanilla": {
      "types": "./dist/vanilla/index.d.mts",
      "default": "./dist/vanilla/index.mjs"
    },
    "./vanilla/adapters": {
      "types": "./dist/vanilla/adapters/index.d.mts",
      "default": "./dist/vanilla/adapters/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "test:node": "node --run test",
    "test:ci": "vitest run",
    "typecheck": "tsc --noEmit",
    "test:types": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rm -rf node_modules dist",
    "release": "bun run build && bumpp --tag 'auth-v%s' && bun publish --tag latest"
  },
  "devDependencies": {
    "tsdown": "0.16.5",
    "typescript": "^5.9.3",
    "vitest": "4.0.7",
    "vite-tsconfig-paths": "5.1.4",
    "msw": "2.6.8"
  },
  "dependencies": {
    "@supabase/auth-js": "2.79.0",
    "better-auth": "1.4.6-beta.3",
    "zod": "4.1.12",
    "jose": "6.1.2",
    "@neondatabase/auth-ui": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  }
}
