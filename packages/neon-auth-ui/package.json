{
  "name": "@neondatabase/neon-auth-ui",
  "version": "0.1.0-alpha.2",
  "description": "UI components for Neon Auth",
  "type": "module",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.mjs",
    "./css": {
      "types": "./dist/css.d.ts",
      "default": "./dist/style.css"
    },
    "./tailwind": {
      "default": "./dist/tailwind.css"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "node build-css.mjs && tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "test:node": "node --run test",
    "test:ci": "vitest run",
    "typecheck": "tsc --noEmit",
    "test:types": "tsc --noEmit",
    "release": "bun run build && bumpp --tag 'neon-auth-ui-v%s' && bun publish --tag latest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "tsdown": "0.16.5",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.10"
  },
  "dependencies": {
    "@captchafox/react": "^1.10.0",
    "@daveyplate/better-auth-ui": "3.2.13",
    "@hcaptcha/react-hcaptcha": "^1.12.1",
    "@hookform/resolvers": "^5.2.2",
    "@marsidev/react-turnstile": ">=1.1.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-context": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-primitive": "^2.1.4",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-use-callback-ref": "^1.1.1",
    "@radix-ui/react-use-layout-effect": "^1.1.1",
    "@wojtekmaj/react-recaptcha-v3": "^0.1.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.555.0",
    "next-themes": "^0.4.6",
    "react-google-recaptcha": "^3.1.0",
    "react-hook-form": "^7.66.1",
    "react-qr-code": "^2.0.18",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "ua-parser-js": "^2.0.5",
    "vaul": "^1.1.2",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "@neondatabase/neon-auth": ">=0.1.0-alpha.2",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "@neondatabase/neon-auth": {
      "optional": false
    },
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  }
}
