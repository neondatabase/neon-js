  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    // "allowJs": true,
    // "noEmit": true,
    "jsx": "react-jsx",
    "incremental": true,
